        <CheckBox x:Name="cbBreakfast" Grid.ColumnSpan="2" Content="Breakfast" HorizontalAlignment="Left" Height="23" Margin="224,270,0,0" VerticalAlignment="Top" Width="133"/>
        <CheckBox x:Name="cbCarHire" Grid.ColumnSpan="2" Content="Car Hire" HorizontalAlignment="Left" Height="23" Margin="362,270,0,0" VerticalAlignment="Top" Width="133"/>
