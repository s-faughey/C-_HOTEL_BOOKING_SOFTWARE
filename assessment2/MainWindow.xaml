        <TextBlock x:Name="ArrivalDateBlock" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="24" Margin="10,162,0,0" TextWrapping="Wrap" Text="Arrival Date (dd/mm/yyyy)" VerticalAlignment="Top" Width="141"/>
