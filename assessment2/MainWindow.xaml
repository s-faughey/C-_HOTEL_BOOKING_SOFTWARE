        <Button x:Name="btnAmendGuest" Grid.ColumnSpan="2" Content="Amend Guest" HorizontalAlignment="Left" Height="30" Margin="180,593,0,0" VerticalAlignment="Top" Width="80" Click="btnAmendGuest_Click"/>
