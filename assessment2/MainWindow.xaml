        <TextBox x:Name="tbDietaryRequirements_Breakfast" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="60" Margin="192,330,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"/>
        <TextBlock x:Name="textBlockDietaryRequirements_Breakfast" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="27" Margin="192,298,0,0" TextWrapping="Wrap" Text="Dietary requirements:" VerticalAlignment="Top" Width="165"/>
